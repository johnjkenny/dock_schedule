        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "description": "Current state of the proxy service",
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "mappings": [
            {
              "type": "value",
              "options": {
                "null": {"text": "N/A"},
                "0": {"text": "Down"},
                "1": {"text": "Up"}
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 4,
        "w": 3,
        "x": 0,
        "y": 1
