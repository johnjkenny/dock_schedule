      "targets": [
        {
          "editorMode": "code",
          "exemplar": false,
          "expr": "nginx_up{instance=~\"$instance\"}",
          "instant": true,
          "legendFormat": "__auto",
          "range": false,
          "refId": "A"
        }
      ],
      "title": "Service State",
      "type": "stat"
